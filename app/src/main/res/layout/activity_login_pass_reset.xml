<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordResetActivity"
    android:background="@color/logo_orange">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/ic_arrow_back" />

    <View
        android:id="@+id/v_circle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginHorizontal="220dp"
        android:layout_marginTop="-120dp"
        android:layout_toEndOf="@id/btn_back"
        android:background="@drawable/circle_hollow" />

    <TextView
        android:id="@+id/txtV_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_password"
        android:layout_below="@id/btn_back"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/txtV_info"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/reset_pass_info"
        android:lineSpacingExtra="8dp"
        android:layout_below="@id/txtV_welcome"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        />

    <include layout="@layout/drawer_reset_pass"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        />

</RelativeLayout>
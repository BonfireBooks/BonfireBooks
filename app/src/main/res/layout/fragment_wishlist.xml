<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WishlistFragment"
    android:backgroundTint="#F9F9F9">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_wishlist_empty"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgV_girl_carrying_boxes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_girl_carrying_boxes"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/textV_wishlist_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wishlist is Empty"
            android:textColor="#414b5a"
            android:textSize="18sp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/imgV_girl_carrying_boxes"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <Button
            android:id="@+id/btn_explore"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:text="Explore"
            android:background="@drawable/buttons_orange"
            app:layout_constraintTop_toTopOf="@id/textV_wishlist_empty"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:id="@+id/scrollV_wishlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linlayout_wishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

</FrameLayout>
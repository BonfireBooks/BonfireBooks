<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logo_orange"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_arrow_back" />

    <View
        android:id="@+id/v_circle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginHorizontal="220dp"
        android:layout_marginTop="-120dp"
        android:layout_toEndOf="@id/btn_back"
        android:background="@drawable/circle_hollow" />

    <TextView
        android:id="@+id/txtV_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_back"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/signup_header"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtV_info"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtV_welcome"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="8dp"
        android:text="@string/signup_instructions"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <View
        android:id="@+id/rectangle"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle" />

    <include
        layout="@layout/drawer_signup"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true" />


</RelativeLayout>